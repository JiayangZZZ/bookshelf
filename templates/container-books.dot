<table class="two-column">

{{~it.books : book : index}}
  <tr>
    <td class="column-nerrow"><img src="/public/images/logo.png"></td>
    <td class="column-wide">
      <a href="http://localhost:3800/book/{{=book.id}}">
        <div class="books-promo">
          <p class="promo-title">{{=book.name}}</p>
          <p class="promo-description">{{=book.introduction}}</p>
        </div>
      </a>
    </td>
  </tr>
{{~}}

</table>
